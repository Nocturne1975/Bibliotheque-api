          "raw": "{\n  \"titre\": \"Les Miserables\",\n  \"isbn\": \"978-2-253-09633-4\",\n  \"auteur\": \"Victor Hugo\",\n  \"editeur\": \"Le Livre de Poche\",\n  \"anneePublication\": 1862,\n  \"categorie\": \"Roman\"\n}"
        },
        "url": { "raw": "http://localhost:3000/livres", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["livres"] }
      }
    },
    {
      "name": "Create emprunt",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
